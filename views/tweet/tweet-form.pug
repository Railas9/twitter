extends ../layout

block content
  div(class="d-flex flex-row content mx-auto")
    div(class="profile-container")
      include ../includes/profile
    div(class="flex-fill")
      form(class="card" method="post" action=tweet._id ? "/tweets/tweet/update/"+tweet._id : "/tweets")
        div(class="card-header") Ã‰crire un tweet
        div(class="card-body")
          div(class="form-group")
            textarea(class="form-control" name="content" placeholder="What is happening" )= tweet.content
            if errors 
               ul(class='my-2')
                 each error in errors 
                   li(class='text-danger')= error
          div(class="w-100 d-flex justify-content-end")
            input(type="submit" value="Send" class="btn btn-primary my-2")
